@ECHO OFF
SETLOCAL DISABLEDELAYEDEXPANSION

SET FILE_PATH=%~1
SET SNOWSQL_DATABASE=%~2

break>"%FILE_PATH%"tbldata_put.sql

FOR %%A IN ("%FILE_PATH%"*.txt) DO (
	SETLOCAL ENABLEDELAYEDEXPANSION
	SET TABLE_NAME=%%~nA
	SET STAGING_TABLE_NAME=!TABLE_NAME:.=.%%!
	
	echo put file://%cd%\%%A @!SNOWSQL_DATABASE!.!STAGING_TABLE_NAME! auto_compress=true overwrite=true; >> "%FILE_PATH%"tbldata_put.sql
	SETLOCAL DISABLEDELAYEDEXPANSION
)

SETLOCAL DISABLEDELAYEDEXPANSION